{
  "compilerOptions": {
    "target": "es2019",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,
    "resolveJsonModule": true,         
    "allowSyntheticDefaultImports": true,                                    
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir" : "./bin",
    "lib": [
      "es2019"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]             
  },
  "include": [
    "bot.ts",
  ],
  
  "exclude": [
    "node_modules"
  ]        
}